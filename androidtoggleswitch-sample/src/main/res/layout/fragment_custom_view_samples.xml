<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            style="@style/Label"
            android:text="@string/image_and_text"/>

        <com.wozverine.androidtoggleswitch.widgets.ToggleSwitch
            android:id="@+id/imageTextToggleSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toggleHeight="104dp"
            app:toggleMargin="16dp"
            app:elevation="8dp"/>

        <TextView
            style="@style/Label"
            android:text="@string/only_images"/>

        <com.wozverine.androidtoggleswitch.widgets.ToggleSwitch
            android:id="@+id/arrowImagesToggleSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:checkedBackgroundColor="@color/green"
            app:toggleHeight="54dp"
            app:toggleMargin="16dp"
            app:elevation="8dp"/>

        <TextView
            style="@style/Label"
            android:text="@string/multiple_colors"/>

        <com.wozverine.androidtoggleswitch.widgets.ToggleSwitch
            android:id="@+id/multipleColorsToggleSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toggleHeight="48dp"
            app:elevation="4dp"/>

    </LinearLayout>
</layout>